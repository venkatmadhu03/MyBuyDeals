<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include
        android:id="@+id/headerInclude"
        layout="@layout/header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerInclude"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="52.5dp">

            <!--//main-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_menu_gallery" />

                <!--******FIRST NAME*******-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:padding="7dp">

                    <appsnova.com.mybuydeals.ownlibraries.CustomTextView
                        android:id="@+id/firstNameTextView"
                        style="@style/headerTitleSmallStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="First Name :"
                        android:textColor="@color/normalGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/firstNameEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/rounded_background"
                            android:hint="First name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@color/colorBlack" />

                    </LinearLayout>
                </LinearLayout>

                <!--*******second name*******-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="7dp">

                    <appsnova.com.mybuydeals.ownlibraries.CustomTextView
                        android:id="@+id/lastNameTextView"
                        style="@style/headerTitleSmallStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Last Name :"
                        android:textColor="@color/normalGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/lastNameEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/rounded_background"
                            android:hint="Last name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="#333333" />

                    </LinearLayout>
                </LinearLayout>

                <!--*******Email name*******-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="7dp">

                    <appsnova.com.mybuydeals.ownlibraries.CustomTextView
                        android:id="@+id/emailIdTextView"
                        style="@style/headerTitleSmallStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Email ID :"
                        android:textColor="@color/normalGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/emailIdEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="1dp"
                            android:background="@drawable/rounded_background"
                            android:hint="Email"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="#333333" />

                    </LinearLayout>
                </LinearLayout>

                <!--******PHONE NO.********-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="7dp">

                    <appsnova.com.mybuydeals.ownlibraries.CustomTextView
                        android:id="@+id/phoneno1TextView"
                        style="@style/headerTitleSmallStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Phone No :"
                        android:textColor="@color/normalGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/mobileEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="1dp"
                            android:background="@drawable/rounded_background"
                            android:hint="Mobile"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:textColor="#333333" />

                    </LinearLayout>
                </LinearLayout>


                <!--******ADDRESS Line1********-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <appsnova.com.mybuydeals.ownlibraries.CustomTextView
                        android:id="@+id/address1TextView"
                        style="@style/headerTitleSmallStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Address Line1 :"
                        android:textColor="@color/normalGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/addressLine1Edittext"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="1dp"
                            android:background="@drawable/rounded_background"
                            android:gravity="center_vertical"
                            android:hint="Delivery Address Line1"
                            android:inputType="text"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="#333333" />

                    </LinearLayout>
                </LinearLayout>

                <!--*** Address Line2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <appsnova.com.mybuydeals.ownlibraries.CustomTextView
                        android:id="@+id/address2TextView"
                        style="@style/headerTitleSmallStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Address Line2 :"
                        android:textColor="@color/normalGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/addressLine2Edittext"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="1dp"
                            android:background="@drawable/rounded_background"
                            android:gravity="center_vertical"
                            android:hint="Delivery Address Line2"
                            android:inputType="text"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="#333333" />

                    </LinearLayout>
                </LinearLayout>

                <!--******zip********-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="7dp">

                    <appsnova.com.mybuydeals.ownlibraries.CustomTextView
                        android:id="@+id/zip1TextView"
                        style="@style/headerTitleSmallStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="ZIP Code :"
                        android:textColor="@color/normalGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/pinCodeCheckEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="1dp"
                            android:background="@drawable/rounded_background"
                            android:hint="ZIP Code"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="#333333" />

                    </LinearLayout>
                </LinearLayout>

                <!--******CITY********-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="7dp">

                    <appsnova.com.mybuydeals.ownlibraries.CustomTextView
                        android:id="@+id/city1TextView"
                        style="@style/headerTitleSmallStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="City :"
                        android:textColor="@color/normalGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/cityEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="1dp"
                            android:background="@drawable/rounded_background"
                            android:hint="City"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="#333333" />

                    </LinearLayout>
                </LinearLayout>

                <!--State-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="7dp">

                    <appsnova.com.mybuydeals.ownlibraries.CustomTextView
                        android:id="@+id/state"
                        style="@style/headerTitleSmallStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="State :"
                        android:textColor="@color/normalGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/stateEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="1dp"
                            android:background="@drawable/rounded_background"
                            android:hint="State"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Telangana"
                            android:textColor="#333333" />

                    </LinearLayout>
                </LinearLayout>

                <!--Country-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="7dp">

                    <appsnova.com.mybuydeals.ownlibraries.CustomTextView
                        android:id="@+id/countryTextView"
                        style="@style/headerTitleSmallStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Country :"
                        android:textColor="@color/normalGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/countryEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="1dp"
                            android:background="@drawable/rounded_background"
                            android:hint="Country"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="India"
                            android:textColor="#333333" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <appsnova.com.mybuydeals.ownlibraries.CustomTextView
            android:id="@+id/continueOrderTextView"
            style="@style/buttonTextStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:drawableRight="@drawable/ic_menu_gallery"
            android:gravity="center"
            android:padding="8dp"
            android:text="CONTINUE TO ORDER"
            android:textColor="#fff"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>